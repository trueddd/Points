<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dirin"
        tools:context="feis_clan.points.MainActivity">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
        <LinearLayout
                android:id="@+id/new_game_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:padding="10dp"
                    android:text="@string/new_game_header"
                    android:textAlignment="center"
                    android:textSize="32sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/new_game_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/stats_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:padding="10dp"
                    android:text="@string/stats_header"
                    android:textAlignment="center"
                    android:textSize="32sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/stats_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/exit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:padding="10dp"
                    android:text="@string/exit_header"
                    android:textAlignment="center"
                    android:textSize="32sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/exit_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
